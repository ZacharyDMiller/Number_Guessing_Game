function attempt pass random_num
    set guess_count as 0
    set guess to prompt as int
    if guess not equal to random_num
        guess_count += 1
    while guess not equal to random_num
        if guess lower than random_num
            display too low message
            guess_count += 1
            set guess to prompt as int
        else if guess higher than random_num
            display too high message
            guess_count += 1
            set guess to prompt as int
    endwhile
    return random_num and guess_count
endfunction

function start_game
    display welcome message
    set random_num to value in range 1-10
    call attempt with random_num
endfunction

function finish_game pass random_num and guess_count
    display congrats message as random_num and guess_count
endfunction
